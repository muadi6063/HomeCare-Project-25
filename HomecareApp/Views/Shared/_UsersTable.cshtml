@model IEnumerable<HomecareApp.Models.User>

<div class="container p-0">
    
    <table class="table table-striped table-hover border">
        
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Navn</th>
                <th>E-post</th>
                <th>Rolle</th>
                <th>Handlinger</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>
                        @user.Name
                    </td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.Role == "Admin")
                        {
                            <span class="badge bg-danger">@user.Role</span>
                        }
                        else if (user.Role == "HealthcarePersonnel")
                        {
                            <span class="badge bg-success">@user.Role</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">@user.Role</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@user.UserId" class="btn btn-sm btn-success">Oppdater</a>
                        <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">Slett</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>