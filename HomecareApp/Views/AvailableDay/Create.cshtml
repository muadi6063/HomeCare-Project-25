@model AvailableDay

<h2>Create Available Day</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Date"></label><span class="text-danger">*</span>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime">Start Time</label><span class="text-danger">*</span>
        <input asp-for="StartTime" type="time" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime">End Time</label><span class="text-danger">*</span>
        <input asp-for="EndTime" type="time" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Available Day</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>