@model AvailableDay

<h1>Are you sure you want to delete?</h1>

<div>
    <h4>Available Day</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Available Day ID</dt>
        <dd class="col-sm-10">@Model.AvailableDayId</dd>

        <dt class="col-sm-2">Healthcare Personnel</dt>
        <dd class="col-sm-10">@(Model.HealthcarePersonnel?.Name ?? "Unknown")</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>

        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.AvailableDayId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>