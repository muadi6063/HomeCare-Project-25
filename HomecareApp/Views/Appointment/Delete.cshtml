@model HomecareApp.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h2> Delete Appointment</h2>

<h4>Are you sure you want to delete this appointment?</h4>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-3">Client</dt>
        <dd>@Model.Client?.Name</dd>

        <dt class = "col-sm-3">HealthcarePersonnel</dt>
        <dd>@Model.AvailableDay?.HealthcarePersonnel</dd>

        <dt class = "col-sm-3">Date</dt>
        <dd>@Model.AvailableDay?.Date.ToShortDateString()</dd>

        <dt class = "col-sm-3">Task Description</dt>
        <dd>@Model.TaskDescription</dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.AppointmentId" method="post">
        <input type="hidden" asp-for="AppointmentId" />

        <button  type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>

</form>