@model HomecareApp.Models.Appointment

@{
    ViewData["Title"] = "Update Appointment";
}

<h2>Oppdater avtale</h2>
<hr />

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="AppointmentId" />

    <div class="form-group">
        <label asp-for="ClientId" class="control-label">client</label>
        <select asp-for="ClientId" class="form-control" asp-items="@(new SelectList(ViewBag.Clients, "UserId", "Name"))">
            <option value="">Choose client</option>
        </select>
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="AvailableDayId" class="control-label">Available day</label>
        <select asp-for="AvailableDayId" class="form-control" asp-items="@(new SelectList(ViewBag.AvailableDays, "AvailableDayId", "Date"))">
            <option value="">Choose day</option>
        </select>
        <span asp-validation-for="AvailableDayId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="StartTime" class="control-label">Starttime</label>
        <input asp-for="StartTime" class="form-control" type="time" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="EndTime" class="control-label">Endtime</label>
        <input asp-for="EndTime" class="form-control" type="time" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="TaskDescription" class="control-label">description</label>
        <textarea asp-for="TaskDescription" class="form-control"></textarea>
        <span asp-validation-for="TaskDescription" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

