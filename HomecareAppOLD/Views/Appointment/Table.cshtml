@model IEnumerable<HomecareApp.Models.Appointment>

<h2>Appointments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Client</th>
            <th>Healthcare Personnel</th>
            <th>Date</th>
            <th>Start</th>
            <th>End</th>
            <th>Task</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appt in Model)
        {
            <tr>
                <td>@appt.Client?.Name</td>
                <td>@appt.AvailableDay?.HealthcarePersonnel?.Name</td>
                <td>@(appt.AvailableDay?.Date.ToString("yyyy-MM-dd") ?? "N/A")</td>
                <td>@appt.StartTime</td>
                <td>@appt.EndTime</td>
                <td>@appt.TaskDescription</td>
                <td>
                    <a asp-action="Update" asp-route-id="@appt.AppointmentId" class="btn btn-sm btn-outline-primary">Update</a> |
                    <a asp-action="Delete" asp-route-id="@appt.AppointmentId" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Appointment</a>
